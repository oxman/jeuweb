= form_for @topic, url: private_topics_path do |f|
  %div
    = f.label :participant_names
    = f.text_field :participant_names, value: f.object.participant_names.join(', ')
  %div
    = f.label :title
    = f.text_field :title

  %div
    = f.label :content
    %br
    = f.text_area :content

  %div
    = f.submit "Créer la discussion privée"
