!!!
%html
  %head
    %meta{ charset: 'utf-8' }
    %title Jeuweb
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %div
      = link_to 'JeuWeb', root_path
      - if current_user
        = current_user.name
        = link_to('Déconnexion', sign_out_path, method: :delete)
      - else
        Invité
        = link_to('Connexion', sign_in_path)

    = yield
