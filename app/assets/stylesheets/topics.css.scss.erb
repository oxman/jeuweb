$itemHeight: 80px;
$backgroundColor: #eee;
$avatarBorderRadius: 10%;


#topics {
  .topic.unread {
    h4 {
      font-weight: bold;
    }
  }

  .topic {
    background:    $backgroundColor;
    height:        $itemHeight;
    margin-bottom: 12px;
    overflow:      auto;
    overflow:      hidden;
    width:         100%;

    .avatar {
      float:  left;
      width:  60px;
      height: $itemHeight;
      margin: 10px 0 10px 10px;

      img {
        border-radius: $avatarBorderRadius;
      }
    }

    .meta_data {
      float:   left;
      height:  100%;
      padding: 12px;

      h4 {
        font-size:     1.5em;
        margin-bottom: 8px;

        a {
          display: block;
        }
      }

      .tags {
        li {
          display: inline-block;
        }
      }
    }

    .replies, .score {
      color:       #777;
      float:       right;
      font-weight: bold;
      height:      100%;
      padding:     12px;
      text-align:  center;
      width:       80px;

      .count {
        color:       #333;
        font-size:   1.4em;
        font-weight: bold;
        line-height: 2em;
      }
    }
  }
}

section#topic {
  header.participants {
    background: #eee;
    margin:     0 0 12px;
    padding:    12px;

    form {
      float: right;
    }
  }

  header.topic {
    background: #eee;
    height:     110px;
    overflow:   hidden;
    padding:    0;

    .avatar {
      float:  left;
      height: 80px;
      margin: 12px 0 0 12px;
      width:  80px;

      img {
        border-radius: $avatarBorderRadius;
      }
    }

    .meta_data_and_title {
      float:   left;
      height:  100%;
      padding: 12px;

      h2 {
        font-size:   2em;
        font-weight: bold;
      }

      .meta_data {
        .author_and_date {
          .author {
            display: inline-block;
            margin:  8px 0;
          }
          time {
            display: inline-block;
          }
        }

        .tags {
          li {
            display: inline-block;
          }
        }
      }
    }

    .score {
      color:       #777;
      float:       right;
      font-weight: bold;
      height:      100%;
      padding:     12px;
      text-align:  center;
      width:       70px;

      a.selected {
        color: orange;
      }

      .count {
        color:       #333;
        font-size:   1.4em;
        line-height: 1.6em;
      }
    }
  }

  .initial_message {
    padding: 12px;
    background: #eee;
  }

  .controls {
    background: #eee;
    overflow:   hidden;
    padding:    12px;

    .actions {
      float: right;
      a {
        margin-right: 12px;
      }

      a:last-child {
        margin-right: 0;
      }
    }

    .change_tags {
      float: left;
    }
  }
}

.reply {
  margin-top: 12px;
  overflow: hidden;

  .avatar_and_score {
    float:      left;
    text-align: center;
    width:      80px;

    .avatar {
      text-align: left;
      height:     60px;
      width:      60px;

      img {
        border-radius: $avatarBorderRadius;
      }
    }

    .score {
      color:       #777;
      float:       left;
      font-weight: bold;
      height:      100%;
      padding:     12px;
      text-align:  center;
      width:       60px;

      a.selected {
        color: orange;
      }

      .count {
        color:       #333;
        font-size:   1em;
        line-height: 1.6em;
      }
    }
  }

  .header_and_message {
    background:  #eee;
    margin-left: 72px;
    min-height:  80px;


    header {
      padding: 12px 12px 0;

      .author_and_date {
        display: inline-block;
      }

      .actions {
        float: right;

        a {
          margin-right: 12px;
        }

        a:last-child {
          margin-right: 0;
        }
      }
    }

    .message {
      padding: 12px;
    }
  }
}

.topic-actions {
  background: #eee;
  margin-top: 12px;
  padding:    12px;

  .content {
    margin: 0 5px 0 0;
  }

  textarea {
    width: 100%;
  }
}


.highlight {
  background:  #fff;
  border:      1px solid #ccc;
  font-family: 'Courier New', Courier, monospace;
  overflow-x:   auto;
  overflow-y:   hidden;
  padding:      12px;
}


